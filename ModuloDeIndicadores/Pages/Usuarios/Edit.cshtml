@page
@model ModuloDeIndicadores.Pages.Usuarios.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Editar Usuario</h2>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppUser.Id" />
            <div class="form-group">
                <label asp-for="AppUser.NombreUsuario" class="control-label">Nombre de Usuario</label>
                <input asp-for="AppUser.NombreUsuario" class="form-control" />
                <span asp-validation-for="AppUser.NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.Email" class="control-label"></label>
                <input asp-for="AppUser.Email" class="form-control" />
                <span asp-validation-for="AppUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.PhoneNumber" class="control-label">Teléfono</label>
                <input asp-for="AppUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="AppUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.Identificador" class="control-label"></label>
                <input asp-for="AppUser.Identificador" class="form-control" />
                <span asp-validation-for="AppUser.Identificador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.Numero" class="control-label"></label>
                <input asp-for="AppUser.Numero" class="form-control" />
                <span asp-validation-for="AppUser.Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}