@page
@model ModuloDeIndicadores.Pages.Usuarios.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Usuarios</h2>
    </div>
    <div class="col-6 text-right">
        <a href="@Url.Content("~/Identity/Account/Register/")" class="btn btn-info">
            <i class="fas fa-plus"></i>&nbsp; Crear Nuevo Registro
        </a>
    </div>
</div>
<br />

<div class="col-12 border p-3">

    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Identificador</th>
                <th>Numero</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/Usuarios.js"></script>
}
