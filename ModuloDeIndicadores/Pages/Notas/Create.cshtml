@page
@model ModuloDeIndicadores.Pages.Notas.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Crear Nota</h2>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Indicador</label>
                <select id="Id" asp-for="Nota.Indicador.Id_Indicador" asp-items="Model.Options" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nota.Descripcion" class="control-label"></label>
                <input asp-for="Nota.Descripcion" class="form-control" />
                <span asp-validation-for="Nota.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nota.Logro" class="control-label"></label>
                <input asp-for="Nota.Logro" class="form-control" />
                <span asp-validation-for="Nota.Logro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nota.Puntos" class="control-label"></label>
                <input asp-for="Nota.Puntos" class="form-control" />
                <span asp-validation-for="Nota.Puntos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nota.Mes" class="control-label"></label>
                <input asp-for="Nota.Mes" class="form-control" />
                <span asp-validation-for="Nota.Mes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
